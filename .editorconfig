# Editor configuration, see https://editorconfig.org
root = true

[*.js]
end_of_line = lf
insert_final_newline = true
charset = utf-8

[*.js]
indent_style = space
indent_size = 2

[*.ts(x)?]
end_of_line = lf
insert_final_newline = true
charset = utf-8

[*.ts(x)?]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
